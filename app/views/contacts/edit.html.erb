<%= form_tag "/contacts/#{params[:id]}", method: :patch do %>
 <form>
  <br>First name:<input type="text" name="first_name" placeholder="Eric" value="<%= @contact.first_name%>"><br>
  <br>Last name:<input type="text" name="last_name" placeholder="Muvunyi" value="<%= @contact.last_name%>"><br>
  <br>Email:<input type="email" name="email" placeholder=".......@gmail.com" value="<%= @contact.email%>"><br>
  <br>Phone Contact:<input type="text" name="phone" placeholder="078....." value="<%= @contact.phone%>"><br>
  <br><button type="submit" class="btn btn-default">Submit</button><br>
</form> 
<% end %>